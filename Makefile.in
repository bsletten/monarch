# The top-level Makefile that is used to build 

SUBDIRS := 3rdparty/cpp \
           rt/cpp \
           util/cpp \
           modest/cpp \
           event/cpp \
           io/cpp \
           config/cpp \
           crypto/cpp \
           data/cpp \
           net/cpp \
           mail/cpp \
           sql/cpp \
           test/cpp

MAKE_DIR = $(MAKE) -j -l 10.0 -C $(dir)

all:
	@$(foreach dir,$(SUBDIRS),$(MAKE_DIR) build-directories build-objects build-libraries &&) true
	@$(foreach dir,$(SUBDIRS),$(MAKE_DIR) build-executables &&) true

clean:
	@$(foreach dir,$(SUBDIRS),$(MAKE_DIR) clean &&) true
	@rm -rf libs/*

test: all
	test/cpp/dist/linux/run-unit-tests

internal-docs:
	rm -rf docs/cpp-api
	mkdir -p docs/cpp-api
	doxygen setup/docs.doxygen
