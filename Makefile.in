# Makefile to compile and package the Digital Bazaar common libraries

.PHONY: monodevelop

help:
	@echo "Build commands:"
	@echo "   monodevelop - Create a monodevelop solution file (development)"
	@echo "   internal-docs - Create all of the internal documentation files (internal use only)"

monodevelop:
	# Create the 3rd party projects
	./setup/create_mono_project -pn ThirdParty.Mono.Math -o allow-unsafe-code -rg System -tt Library 3rdparty/csharp/ThirdParty.Mono.Math
	./setup/create_mono_project -pn DB.Common.Logging -rg System -tt Library 3rdparty/csharp/DB.Common.Logging
	./setup/create_mono_project -pn DB.Common -rp ThirdParty.Mono.Math -rp DB.Common.Logging -rg System -rg System.Xml -tt Library 3rdparty/csharp/DB.Common

	# Create all of the unit test project files
	./setup/create_mono_project -pn Sms.IT.ITDigitalSignature -rp DB.Common.Logging -rp DB.Common -rp Sms.Common -tt Exe common/csharp/test/ITDigitalSignature.cs

	# Create the final solution file
	./setup/create_mono_solution
