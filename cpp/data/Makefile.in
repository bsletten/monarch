# Makefile to compile the module in this directory

LIBRARIES = modata

ifeq (@HAVE_LIBRDFA@,yes)
rdfa_HEADERS = $(wildcard rdfa/*.h)
rdfa_SOURCES = $(wildcard rdfa/*.cpp)
endif

modata_HEADERS = \
	$(wildcard *.h) \
	$(wildcard avi/*.h) \
	$(wildcard id3v2/*.h) \
	$(wildcard json/*.h) \
	$(wildcard mpeg/*.h) \
	$(wildcard pdf/*.h) \
	$(rdfa_HEADERS) \
	$(wildcard riff/*.h) \
	$(wildcard xml/*.h)
modata_SOURCES = \
	$(wildcard *.cpp) \
	$(wildcard avi/*.cpp) \
	$(wildcard id3v2/*.cpp) \
	$(wildcard json/*.cpp) \
	$(wildcard mpeg/*.cpp) \
	$(wildcard pdf/*.cpp) \
	$(rdfa_SOURCES) \
	$(wildcard riff/*.cpp) \
	$(wildcard xml/*.cpp)

DYNAMIC_LINK_LIBRARIES = moio moutil mort mologging expat

DYNAMIC_MACOS_LINK_LIBRARIES = iconv charset expat mocompress
DYNAMIC_WINDOWS_LINK_LIBRARIES = libexpat iconv2 charset1

CXX_FLAGS += @LIBRDFA_CFLAGS@

ifeq (@HAVE_LIBRDFA@,yes)
DYNAMIC_LINK_LIBRARIES += rdfa
endif

ifeq (@HAVE_LIBEXPAT@,yes)
DYNAMIC_LINK_LIBRARIES += rdfa
endif

# ----------- Standard Makefile
include @MONARCH_DIR@/setup/Makefile.base
