# Makefile to compile the module in this directory
HEADERS = $(wildcard *.h) \
          $(wildcard avi/*.h) \
          $(wildcard id3v2/*.h) \
          $(wildcard json/*.h) \
          $(wildcard mpeg/*.h) \
          $(wildcard pdf/*.h) \
          $(wildcard riff/*.h) \
          $(wildcard xml/*.h)
SOURCES = $(wildcard *.cpp) \
          $(wildcard avi/*.cpp) \
          $(wildcard id3v2/*.cpp) \
          $(wildcard json/*.cpp) \
          $(wildcard mpeg/*.cpp) \
          $(wildcard pdf/*.cpp) \
          $(wildcard riff/*.cpp) \
          $(wildcard xml/*.cpp)

LIBRARIES = dbdata
DYNAMIC_LINK_LIBRARIES = dbio dbutil dbrt dblogging
DYNAMIC_WINDOWS_LIBRARIES = libexpat iconv2 charset1
DYNAMIC_MACOS_LIBRARIES = iconv charset expat dbcompress

# ----------- Standard Makefile
include @DBCOREDIR@/setup/Makefile.base
