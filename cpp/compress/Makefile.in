# Makefile to compile the module in this directory

HEADERS = $(wildcard *.h) \
          $(wildcard deflate/*.h) \
          $(wildcard gzip/*.h) \
          $(wildcard zip/*.h)
SOURCES = $(wildcard *.cpp) \
          $(wildcard deflate/*.cpp) \
          $(wildcard gzip/*.cpp) \
          $(wildcard zip/*.cpp)

LIBRARIES = mocompress
DYNAMIC_LINK_LIBRARIES = mort moio moutil

DYNAMIC_WINDOWS_LIBRARIES = mgwz
STATIC_WINDOWS_LIBRARIES = z

DYNAMIC_MACOS_LIBRARIES = z

# ----------- Standard Makefile
include @MONARCH_DIR@/setup/Makefile.base
