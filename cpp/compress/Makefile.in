# Makefile to compile the module in this directory

LIBRARIES = mocompress
mocompress_HEADERS = \
	$(wildcard *.h) \
	$(wildcard deflate/*.h) \
	$(wildcard gzip/*.h) \
	$(wildcard zip/*.h)
mocompress_SOURCES = \
	$(wildcard *.cpp) \
	$(wildcard deflate/*.cpp) \
	$(wildcard gzip/*.cpp) \
	$(wildcard zip/*.cpp)

DYNAMIC_LINK_LIBRARIES += mort moio moutil

ifeq (@BUILD_FOR_MACOS@,yes)
DYNAMIC_LINK_LIBRARIES += z
endif
ifeq (@BUILD_FOR_WINDOWS@,yes)
DYNAMIC_LINK_LIBRARIES += mgwz
endif

# ----------- Standard Makefile
include @MONARCH_DIR@/setup/Makefile.base
