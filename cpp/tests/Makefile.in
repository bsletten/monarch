# Makefile to compile the module in this directory

# conditional build of tests
ifeq (@BUILD_TESTS@,yes)


ifeq (@BUILD_MYSQL@,yes)
MODULE_CXX_FLAGS += -DHAVE_MYSQL
MYSQL_LIBS = momysql
MYSQL_HEADERS = test-mysql.h
MYSQL_SOURCES = test-mysql.cpp
MYSQL_EXECUTABLES = test-mysql
ifeq (@BUILD_FOR_LINUX@,yes)
MYSQL_DYNAMIC_LIBRARIES = mysqlclient
endif
ifeq (@BUILD_FOR_MACOS@,yes)
MYSQL_DYNAMIC_LIBRARIES = mysqlclient
endif
ifeq (@BUILD_FOR_WINDOWS@,yes)
MYSQL_DYNAMIC_LIBRARIES = mysql
MYSQL_EXECUTABLE_LIBRARIES = mysql
endif
endif

ifeq (@BUILD_SPHINX@,yes)
MODULE_CXX_FLAGS += -DHAVE_SPHINX
SPHINX_LIBS = mosphinx
SPHINX_SOURCES = test-sphinx.cpp
SPHINX_EXECUTABLES = test-sphinx
endif

HEADERS = $(MYSQL_HEADERS)

EXECUTABLES = \
	test-configmanager \
	test-sharedlock-deadlock \
	test-mmap \
	test-random \
	test-ucontext

# Macro to setup building simple one source file libraries.
define setup_test_mod
MODULES += mo$(1)
mo$(subst -,_,$(1))_SOURCES = $(1).cpp
mo$(subst -,_,$(1))_MOD_DIR = tests
endef

TEST_MODS = \
	test-compress \
	test-config \
	test-crypto \
	test-data \
	test-dyno-perf \
	test-event \
	test-fiber \
	test-fiber-yield \
	test-hashtable \
	test-http \
	test-io \
	test-logging \
	test-mail \
	test-modest \
	test-modexp \
	test-net \
	test-pong \
	test-rt \
	$(SPHINX_EXECUTABLES) \
	test-sqlite3 \
	$(MYSQL_EXECUTABLES) \
	test-upnp \
	test-util \
	test-validation

$(foreach mod,$(TEST_MODS),$(eval $(call setup_test_mod,$(mod))))


DYNAMIC_LINK_LIBRARIES = mort momodest moutil mofiber moio mologging mocrypto monet mohttp modata mosql mosqlite3 $(MYSQL_LIBS) moevent momail moconfig mocompress movalidation moupnp $(SPHINX_LIBS) moapp mokernel motest
DYNAMIC_EXECUTABLE_LIBRARIES = motest

DYNAMIC_LINUX_LINK_LIBRARIES = pthread crypto ssl expat sqlite3 $(MYSQL_DYNAMIC_LIBRARIES)
DYNAMIC_MACOS_LINK_LIBRARIES = sqlite3 $(MYSQL_DYNAMIC_LIBRARIES)
DYNAMIC_WINDOWS_LINK_LIBRARIES = sqlite3 $(MYSQL_DYNAMIC_LIBRARIES)
DYNAMIC_WINDOWS_EXECUTABLE_LIBRARIES = pthreadGCE2 libeay32 ssleay32 libexpat sqlite3 iconv2 charset1 $(MYSQL_EXECUTABLE_LIBRARIES) ws2_32 motest

# conditional build of tests
endif

# ----------- Standard Makefile
include @MONARCH_DIR@/setup/Makefile.base
