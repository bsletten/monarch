# Makefile to compile the module in this directory

# conditional build of tests
ifeq (@BUILD_TESTS@,yes)


ifeq (@BUILD_MYSQL@,yes)
MODULE_CXX_FLAGS += -DHAVE_MYSQL
MYSQL_LIBS = momysql
MYSQL_HEADERS = test-mysql.h
MYSQL_SOURCES = test-mysql.cpp
MYSQL_EXECUTABLES = test-mysql
MYSQL_DYNAMIC_WINDOWS_LIBRARIES = mysql
MYSQL_DYNAMIC_LINUX_LIBRARIES = mysqlclient
MYSQL_DYNAMIC_MACOS_LIBRARIES = mysqlclient
MYSQL_EXTRA_WINDOWS_LIBRARIES = $(WINDOWS_LIB_DIR)/mysql.dll
endif

ifeq (@BUILD_SPHINX@,yes)
MODULE_CXX_FLAGS += -DHAVE_SPHINX
SPHINX_LIBS = mosphinx
SPHINX_SOURCES = test-sphinx.cpp
SPHINX_EXECUTABLES = test-sphinx
endif

HEADERS = $(MYSQL_HEADERS)

EXECUTABLES = \
	test-configmanager \
	test-sharedlock-deadlock \
	test-mmap \
	test-random \
	test-ucontext

# Macro to setup building simple one source file libraries.
define setup_test_mod
LIBRARIES += mo$(1)
mo$(subst -,_,$(1))_SOURCES = $(1).cpp
endef

TEST_MODS = \
	test-compress \
	test-config \
	test-crypto \
	test-data \
	test-dyno-perf \
	test-event \
	test-fiber \
	test-fiber-yield \
	test-hashtable \
	test-http \
	test-io \
	test-logging \
	test-mail \
	test-modest \
	test-modexp \
	test-net \
	test-rt \
	$(SPHINX_EXECUTABLES) \
	test-sqlite3 \
	$(MYSQL_EXECUTABLES) \
	test-upnp \
	test-util \
	test-validation

$(foreach mod,$(TEST_MODS),$(eval $(call setup_test_mod,$(mod))))


DYNAMIC_LINK_LIBRARIES = mort momodest moutil mofiber moio mologging mocrypto monet mohttp modata mosql mosqlite3 $(MYSQL_LIBS) moevent momail moconfig mocompress movalidation moupnp $(SPHINX_LIBS) moapp mokernel motest
DYNAMIC_EXECUTABLE_LIBRARIES = motest

LINUX_LIB_DIR = @MONARCH_DIR@/dist/lib
WINDOWS_LIB_DIR = @MONARCH_DIR@/dist/lib
MACOS_LIB_DIR = @MONARCH_DIR@/dist/lib

DYNAMIC_LINUX_LIBRARIES = pthread crypto ssl expat sqlite3 $(MYSQL_DYNAMIC_LINUX_LIBRARIES)
DYNAMIC_MACOS_LIBRARIES = sqlite3 $(MYSQL_DYNAMIC_MACOS_LIBRARIES)
DYNAMIC_WINDOWS_LIBRARIES = sqlite3 $(MYSQL_DYNAMIC_WINDOWS_LIBRARIES)

EXTRA_WINDOWS_LIBRARIES = $(WINDOWS_LIB_DIR)/pthreadGCE2.dll $(WINDOWS_LIB_DIR)/libeay32.dll $(WINDOWS_LIB_DIR)/ssleay32.dll $(WINDOWS_LIB_DIR)/libexpat.dll $(WINDOWS_LIB_DIR)/sqlite3.dll $(WINDOWS_LIB_DIR)/iconv2.dll $(WINDOWS_LIB_DIR)/charset1.dll $(MYSQL_EXTRA_WINDOWS_LIBRARIES) -lws2_32 -lmotest

# conditional build of tests
endif

# ----------- Standard Makefile
include @MONARCH_DIR@/setup/Makefile.base
