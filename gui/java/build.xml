<!DOCTYPE project [
  <!ENTITY jaxrpctargets SYSTEM "../../setup/targets.xml">
]>

<project name="gui" default="build" basedir=".">
	<property file="../../setup/build.properties"/>
	<property file="build.properties"/>

  &jaxrpctargets;

  <target name="build" depends=""
    description="Builds the Digital Bazaar Gui library">
		<mkdir dir="${build}/com/db/gui"/>
		<mkdir dir="${dist}"/>
		<mkdir dir="${test}"/>
		<javac srcdir="${gui}/src/com/db/gui"
      debug="${debug}"
      debuglevel="${debuglevel}"
      destdir="${build}"
      includes="**/*.java">
			<classpath refid="compile.classpath"/>
		</javac>
		<jar jarfile="${dist}/dbgui.jar">
			<fileset dir="build" includes="com/db/gui/**/*"/>
		</jar>
  </target>

	<target name="run-tests" depends="build"
    description="Runs the unit tests for the library">
	</target>

</project>
